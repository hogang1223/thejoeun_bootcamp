<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:elevation="0dp"
    android:layout_width="200dp"
    android:layout_height="180dp">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:cardCornerRadius="16dp"
        android:elevation="0dp"
        >

        <ImageView
            android:id="@+id/edit_delete_imageview"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:elevation="0dp"
            />

        <TextView
            android:id="@+id/edit_delete_textview_name_price"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignLeft="@id/edit_delete_imageview"
            android:layout_alignTop="@id/edit_delete_imageview"
            android:layout_alignRight="@id/edit_delete_imageview"
            android:layout_alignBottom="@id/edit_delete_imageview"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Hello\nHello"
            android:textColor="#000000"
            android:textSize="16dp"
            android:visibility="invisible" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>