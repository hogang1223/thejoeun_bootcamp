<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ImageDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <TextView
                android:id="@+id/detail_textview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진 이름"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/detail_ivbtn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_gravity="center|left"
                android:layout_marginLeft="30dp"
                app:tint="@color/black"
                />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A8A8A8"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        />

                    <ImageView
                        android:id="@+id/detail_image_watermark"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:src="@drawable/ic_baseline_thumb_up_24"
                        android:background="#00ffffff"
                        />

                </FrameLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:layout_marginHorizontal="20dp"
                >

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/detail_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:singleSelection="false"
                    style="@style/CustomChipStyle"
                    android:clickable="false"
                    >

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detail_chip_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="invisible"
                        />

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/detail_textview_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작가"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="right"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/detail_iv_recommend_off"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_baseline_thumb_up_off_alt_24"
                        android:layout_marginRight="10dp"
                        android:visibility="visible"
                        />

                    <ImageView
                        android:id="@+id/detail_iv_recommend"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_baseline_thumb_up_alt_24"
                        android:layout_marginRight="10dp"
                        android:visibility="invisible"
                        />

                </FrameLayout>

                <TextView
                    android:id="@+id/detail_textview_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="명이 추천합니다"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="right"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/detail_textview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000원"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:gravity="right"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                >

                <Button
                    android:id="@+id/detail_btn_cart"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="장바구니"
                    android:textColor="#845EC2"
                    android:textStyle="bold"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:id="@+id/detail_btn_buy"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="바로 구매"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#845EC2"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/detail_sliding_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:topOffset="230dp"
        >

        <ImageButton
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:src="@drawable/ic_baseline_looks_24" />

            <ScrollView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_marginHorizontal="40dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/detail_btn_cart_slide"
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:backgroundTint="#FFFFFF"
                                android:text="장바구니"
                                android:textColor="#845EC2"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/detail_btn_buy_slide"
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:backgroundTint="#845EC2"
                                android:text="바로 구매"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginHorizontal="40dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="카테고리"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="파일형식"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="40dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detail_textview_category"
                                android:layout_width="0px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="카테고리"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/detail_textview_format"
                                android:layout_width="0px"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="파일형식"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginHorizontal="40dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="설명"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/detail_textview_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="설명"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginHorizontal="40dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="작가의 다른 이미지"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/detail_recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                tools:listitem="@layout/detail_custom_layout"
                                android:elevation="0dp"
                                android:scrollbars="none"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/detail_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="40dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="위치"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/detail_textview_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="위치"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <fragment
                                android:id="@+id/detail_map"
                                android:layout_width="350dp"
                                android:layout_height="250dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="20dp"
                                android:layout_gravity="center"
                                class="com.google.android.gms.maps.MapFragment" />

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

    </SlidingDrawer>

</RelativeLayout>