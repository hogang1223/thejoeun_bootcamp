<?xml version="1.0" encoding="utf-8"?>
<!--Recycler View-->
<androidx.cardview.widget.CardView
    android:id="@+id/cartlist_cv_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="0dp"
    android:layout_marginVertical="4dp"
    >
    <LinearLayout
        android:id="@+id/cartlist_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        >
<!--        이미지 모서리 둥그렇게-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="16dp"
            android:elevation="0dp"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/cartlist_iv_imageFile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    />
<!--                워터 마크-->
                <ImageView
                    android:id="@+id/cartlist_iv_watermark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/cart_selected_item"
                    android:background="#50000000"
                    android:visibility="invisible"
                    />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

<!--        TEXT-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingVertical="8dp"
            >
            <TextView
                android:id="@+id/cartlist_tv_sellUserName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="이미지 판매 유저 이름"
                android:textSize="12dp"
                android:textColor="#333"
                />
            <TextView
                android:id="@+id/cartlist_tv_imageTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="이미지 타이틀"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/cartlist_tv_imagePrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="1,000원"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>